<script>
$(document).ready(function () {
  $(".modal").keypress(function(e) { 
    if (e.keyCode == 27) { 
        $("#signup").fadeOut(500);
        //or
        
    } 
});
  
  $("#inputPassword").focusout(function(){ 
    var pwd = $('#inputPassword').val();
    var confirmpwd = $('#confirmPassword').val();
    if(confirmpwd.length>0 && pwd.length > 0){
      
      if(confirmpwd == pwd){
       
        $("#confirmPwdError").html("");
      }
      if(confirmpwd != pwd)
      
      $("#confirmPwdError").html("Passwords dint match");

    }
    if(pwd.length < 8 && pwd.length >0 )
      $("#pwdError").html("Password is weak");
    else {
      $("#pwdError").html("");
    }
  });
  $("#confirmPassword").focusout(function(){
    var pwd = $('#inputPassword').val();
    var confirmpwd = $('#confirmPassword').val();
    if(pwd.length > 0 && confirmpwd.length > 0){
    if(confirmpwd != pwd )
      $("#confirmPwdError").html("Passwords dint match");
    if(confirmpwd == pwd)
        $("#confirmPwdError").html("");
      }
  });
  
});
  </script>


